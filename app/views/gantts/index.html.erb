<%= stylesheet_link_tag "dhtmlxgantt", :media => "all" %>
<%= stylesheet_link_tag "skins/dhtmlxgantt_skyblue", :media=> "all" %> 

<%= javascript_include_tag "dhtmlxgantt" %>  
<%= javascript_include_tag "locale/locale" %>  

<%= javascript_include_tag "ext/dhtmlxgantt_marker" %>  
<%= javascript_include_tag "ext/dhtmlxgantt_quick_info" %>  
<%= javascript_include_tag "ext/dhtmlxgantt_tooltip" %>      

<style type="text/css">
  html, body{ height:100%; padding:0px; margin:0px; overflow: hidden;}
</style>

<div id="gantt_here" style='width:100%; height:100%;'></div>

<script type="text/javascript">
  gantt.config.xml_date = "%Y-%m-%d %H:%i:%s";
  gantt.config.order_branch = true;
  gantt.init("gantt_here");
  gantt.load("<%= data_gantts_path %>", "json");
  var dp = new dataProcessor("<%= db_action_gantts_path %>");
  dp.init(gantt);
</script>

<style>
  div[task_id^='tasks-'] .gantt_add, .gantt_grid_head_add {
    display: none !important;
  }
</style>
